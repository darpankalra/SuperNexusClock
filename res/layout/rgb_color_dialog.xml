<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
	android:focusableInTouchMode="true" >

    <com.flickcraft.supernexusclock.ColorPanelView
			android:id="@+id/rgb_color_panel"
			android:layout_width="fill_parent"
			android:layout_height="30dp"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
		/>
    
    <TextView
        android:id="@+id/alphaTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Alpha"
        android:textColor="#33b5e5"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:id="@+id/alpha_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <SeekBar
            android:id="@+id/alpha_color"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:max="255"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_marginRight="2dp"
            android:progress="0" />

        <EditText
            android:id="@+id/alpha_edit"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="0"
            android:layout_marginLeft="5dp"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="#33b5e5"
            android:selectAllOnFocus="true"
            android:hint="0"
            android:textColorHint="#33b5e5" />
    </LinearLayout>

    <TextView
        android:id="@+id/redTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Red"
        android:textColor="#33b5e5"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:id="@+id/red_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <SeekBar
            android:id="@+id/red_color"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:max="255"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_marginRight="2dp"
            android:progress="0" />

        <EditText
            android:id="@+id/red_edit"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="#33b5e5"
            android:selectAllOnFocus="true"
            android:hint="0"
            android:textColorHint="#33b5e5" />
    </LinearLayout>

    <TextView
        android:id="@+id/greenTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Green"
        android:textColor="#33b5e5"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:id="@+id/green_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <SeekBar
            android:id="@+id/green_color"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:max="255"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_marginRight="2dp"
            android:progress="0" />

        <EditText
            android:id="@+id/green_edit"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="#33b5e5"
            android:selectAllOnFocus="true"
            android:hint="0"
            android:textColorHint="#33b5e5" />
    </LinearLayout>

    <TextView
        android:id="@+id/blueTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Blue"
        android:textColor="#33b5e5"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:id="@+id/blue_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp" >

        <SeekBar
            android:id="@+id/blue_color"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:max="255"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_marginRight="2dp"
            android:progress="0" />

        <EditText
            android:id="@+id/blue_edit"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="#33b5e5"
            android:selectAllOnFocus="true"
            android:hint="0"
            android:textColorHint="#33b5e5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/ok_button"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:background="@drawable/button_custom"
            android:text="Ok"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:background="@drawable/button_custom"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>